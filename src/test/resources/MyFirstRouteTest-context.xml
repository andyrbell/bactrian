<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
         http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <camelContext xmlns="http://camel.apache.org/schema/spring" id="myContextId">
        <endpoint id="testExchange" uri="rabbitmq://localhost:5671/myExchange?connectionFactory=#myConnectionFactory&amp;skipQueueDeclare=true"/>
        <endpoint id="outQueue" uri="rabbitmq://localhost:5671/myExchange_OUT?connectionFactory=#myConnectionFactory&amp;queue=myQueue"/>

        <route>
            <!--<from ref="testExchange"/>-->
            <from uri="direct:start"/>
            <choice>
                <when>
                    <jsonpath>$.foo[?(@.bar=='fizzbuzz')]</jsonpath>
                    <to ref="outQueue"/>
                </when>
            </choice>
        </route>

    </camelContext>
</beans>
